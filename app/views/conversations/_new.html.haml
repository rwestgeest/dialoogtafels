=form_for @conversation, :remote => true do |f| 
  = errors_for @conversation
  .dialog-container
    =hidden_field_tag :location_id, @location.id
    %p 
      .label= f.label :start_date
      .input
        = f.text_field(:start_date)
        = f.time_select(:start_time)
    %p 
      .label= f.label :end_date
      .input
        = f.text_field(:end_date)
        = f.time_select(:end_time)
    .actions
      = f.submit

