.dialog-container
  - if conversations.empty? 
    #conversation_new
      %p
        Er zijn nog geen dialoog gesprekken gepland.
      = link_to "plan je eerste dialoogronde", new_conversation_path(:location_id => @location.to_param), :'data-remote' => true
  - else
    - conversations.each do |conversation|
      .dialog-container{:id => "conversation_#{conversation.to_param}"}
        = l conversation.start_date
        = l conversation.start_time
        = l conversation.end_date
        = l conversation.end_time
        = conversation.number_of_tables
    #conversation_new
      .actions
        = link_to "toevoegen", new_conversation_path(:location_id => @location.to_param), :'data-remote' => true
