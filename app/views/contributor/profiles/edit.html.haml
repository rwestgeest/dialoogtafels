- title "Mijn profiel"
= form_for @person, :url => contributor_profile_path  do |f|
  = errors_for @person

  %p
    .label= f.label :name
    .input= f.text_field :name

  %p
    .label= f.label :email
    .input= f.text_field :email

  %p
    .label= f.label :telephone
    .input= f.text_field :telephone

  .actions
    = f.submit

