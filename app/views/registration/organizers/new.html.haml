- title "Aanmelden als organisator"

= form_for [:registration, @organizer]  do |f|
  -if @organizer.errors.any?
    #error_explanation
      %h2= "#{pluralize(@organizer.errors.count, "error")} prohibited this person from being saved:"
      %ul
        - @organizer.errors.full_messages.each do |msg|
          %li= msg
  %p
    .label= f.label :email
    .input= f.text_field :email

  %p
    .label= f.label :name
    .input= f.text_field :name

  %p
    .label= f.label :telephone
    .input= f.text_field :telephone

  .actions
    = f.submit
