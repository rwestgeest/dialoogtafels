- title "Aanmelden als deelnemer bij #{@location.project.name}"

.city_banner{:style=>"float:right;"}
  .city_banner_photo{:style=>"background: url(#{@location.photo.url(:thumb)}) no-repeat;"}
    .city_banner_text
      %h3= @location.name
      %p= full_address(@location)

%h3 
  Locatie:
  = @conversation.location.name

%p 
  Dialoog georganiseerd
  = time_period @conversation

= form_for @person, :url => registration_participants_path  do |f|
  = errors_for @person
  = hidden_field_tag :conversation_id, @conversation.id
  .dialog-container
    .input-container
      .label= f.label :email
      .input= f.text_field :email

    .input-container
      .label= f.label :name
      .input= f.text_field :name

    .input-container
      .label= f.label :telephone
      .input= f.text_field :telephone
    .clear
  .dialog-container
    - @profile_fields.each do |profile_field|
      .input-container
        .label= f.label profile_field.field_name_with_prefix, profile_field.label
        .input= profile_field.render_field_on(f)
    .clear
  .dialog-container
    = render partial: 'shared/captcha'
    .clear
  .actions
    = link_to "terug", location_path(@location)
    = f.submit
