= javascript_include_tag :trainings
= form_for [:city, @training], :remote => true do |f|
  = errors_for @training
  = hidden_field_tag :training_type_id, @training_type.id
  .dialog-container
    .input-container 
      .label= f.label :start_date
      .input.wide
        = f.text_field(:start_date, :value => @training.start_date && l(@training.start_date), :class => :date_input)
        = f.time_select(:start_time)
    .input-container 
      .label= f.label :end_date
      .input.wide
        = f.text_field(:end_date, :value => @training.end_date && l(@training.end_date), :class => :date_input)
        = f.time_select(:end_time)
    .input-container
      .label= f.label :max_participants
      .input= f.text_field :max_participants
    .input-container
      .label= f.label :location
      .input= f.text_field :location
    .clear
  .actions
    = link_to "sluiten", '#', :id => "close_form"
    = f.submit
