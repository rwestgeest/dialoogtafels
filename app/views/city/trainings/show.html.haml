- title "Training #{@training.name} #{time_period(@training)}"
- context_action ".index", city_trainings_path
- context_action ".edit", edit_city_training_path(@training)
- context_action ".delete", city_training_path(@training), :method => :delete, :confirm => t('.sure')
.dialog-container
  - if @training.attendees.empty?
    %p Geen gespreksleiders ingeschreven aan deze training
  - else
    %p Gespreksleiders
    %ul
      - @training.attendees.each do |attendee|
        %li=  person_entry attendee

