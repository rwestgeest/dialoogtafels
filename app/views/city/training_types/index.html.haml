%div#dialog-form
- title "Trainingen beheren voor #{active_project.name}"
- context_action '.new', new_city_training_type_path
- page_side_bar 'side_bar'
- if (@training_types.empty?)
  = link_to "Maak je eerste training aan", new_city_training_type_path
- else
  = render :partial => 'training_type', :collection => @training_types
.clear
= link_to 'Maak een nieuwe training', new_city_training_type_path
