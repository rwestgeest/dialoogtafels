%div#dialog-form
- title "Dialoog locaties voor #{active_project.name}"
- context_action 'Nieuwe locatie', new_city_location_path
- page_side_bar 'side_bar'
- if (@locations.empty?)
  = link_to "Maak je eerste dialoog locatie aan", new_city_location_path
- else
  .right
    Op
    = Location.count
    locaties worden 
    = Conversation.count
    gesprekken over 
    = Conversation.total_number_of_tables 
    tafels georganiseerd. 
  = render :partial => 'location', :collection => @locations
.clear

